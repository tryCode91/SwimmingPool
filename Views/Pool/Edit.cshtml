@using SwimmingPool_V1.ViewModels
@model EditLaneViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    
    <input type="hidden" value="LaneId" id="LaneId" />
    
    <div class="form-group">
        <label asp-for="Type">Type</label>
        <input asp-for="Type" class="form-control" placeholder="Enter type">
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Limit">Limit</label>
        <input asp-for="Limit" class="form-control" placeholder="Enter limit">
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-1">Submit</button>
</form>